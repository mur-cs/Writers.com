@model FinalProject.Models.Composition

<h2>Додати новий твір</h2>

<form method="post" asp-action="Publish" asp-controller="Home">
    <div class="form-group">
        <label for="Name">Назва твору</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Genre">Жанр</label>
        <select class="form-control" id="Genre" name="Genre" asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()" required>
            
        </select>
    </div>

    <div class="form-group">
        <label for="Text">Опис</label>
        <textarea class="form-control" id="Text" name="Text" rows="4">@Model.Text</textarea>
    </div>

    <input type="hidden" id="UserId" name="UserId" value="@Context.Session.GetString("UserId")" />

    <button type="submit" class="btn btn-primary">Додати твір</button>
</form>
